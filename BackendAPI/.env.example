# BackendAPI environment configuration example

# Server
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@database:5432/music

# Auth
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Observability
OBS_ENABLED=true
# Preferred variable:
OBS_BASE_URL=http://monitoring-logging:8000
# API key for Monitoring&Logging service (set by operator)
OBS_API_KEY=replace-with-token
OBS_SERVICE_NAME=backend-api
OBS_ENVIRONMENT=development
